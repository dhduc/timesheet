{
    "name": "Smart Timesheet Reporter",
    "description": "Calculate & report timesheet automatically",
    "version": "1.0",
    "icons": { "16": "images/icon.png", "48": "images/icon.png", "128": "images/icon.png" },
    "permissions": [
        "cookies", "tabs", "http://*/*", "https://*/*"
    ],

    "browser_action": {
        "default_icon": "images/icon.png"
    },

    "background": {
        "scripts": ["js/background.js"]
    },

    "manifest_version": 2
}
