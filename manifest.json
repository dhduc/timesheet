{
    "name": "A browser action with a popup that changes the page color",
    "description": "Change the current page color",
    "version": "1.0",
    "permissions": [
        "cookies", "tabs", "http://*/*", "https://*/*"
    ],

    "browser_action": {
        "default_icon": "icon.png"
    },

    "background": {
        "scripts": ["js/background.js"]
    },

    "manifest_version": 2
}
